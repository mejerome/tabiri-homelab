# Example environment variables for NetBird services
# Copy this file to .env and update with your values

# Zitadel database environment variables
ZITADEL_DATABASE_POSTGRES_HOST=zdb
ZITADEL_DATABASE_POSTGRES_PORT=5432
ZITADEL_DATABASE_POSTGRES_DATABASE=zitadel
ZITADEL_DATABASE_POSTGRES_USER=zitadel
ZITADEL_DATABASE_POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
ZITADEL_DATABASE_POSTGRES_SSL_MODE=disable
ZITADEL_DATABASE_POSTGRES_MAX_OPEN_CONNS=20
ZITADEL_DATABASE_POSTGRES_MAX_IDLE_CONNS=10
ZITADEL_DATABASE_POSTGRES_MAX_LIFETIME=30m

# Zitadel master key (32 bytes hex encoded)
ZITADEL_MASTERKEY=CHANGE_ME_32_BYTE_HEX_KEY

# Dashboard environment variables
DASHBOARD_SERVER_API_URL=https://your-domain/api
DASHBOARD_SERVER_HTTP_PORT=8080
DASHBOARD_SERVER_HTTPS_PORT=443
DASHBOARD_SERVER_CERT_FILE=
DASHBOARD_SERVER_KEY_FILE=

# Management service environment variables
MANAGEMENT_SERVER_HTTP_PORT=80
MANAGEMENT_SERVER_GRPC_PORT=443
MANAGEMENT_SERVER_DISABLE_ANNOUNCEMENT=false

# Relay service environment variables
RELAY_SERVER_HTTP_PORT=80
RELAY_SERVER_GRPC_PORT=443
